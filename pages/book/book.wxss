.container{
  padding:30rpx;
}
.name{
  width:100%;
  word-wrap: break-word;
  font-size: 50rpx;
  font-weight: bold;
  color: #494949;
}

.infoBlock{
  width:100%;
  display: flex;
  flex-direction: row;
}
.infoBlock image{
  width: 250rpx;
  height: 350rpx;
}
.infoBlock .left{
  margin-right: 20rpx;
}

.infoBlock .right{
  display: flex;
  flex-direction: column;
}
.right view{
  line-height: 40rpx;
}
.title{
  font-size: 38rpx;
  font-weight: bold;
  color: #007722;
  padding-top: 20rpx;
}