/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.loading{
  position: absolute;
  top:0;
  right:0;
  left:0;
  bottom:0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}
.loading view {
  position: absolute;
  top:50%;
	left:50%;
	transform:translate(-50%,-50%);
}
.buttons{
  display: flex;
  flex-direction: column;
}
.buttons button{
  margin-top:40rpx;
}